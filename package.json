{
  "name": "verso-mart",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "npm run dev:ssr",
    "dev:csr": "ng serve --port 5600",
    "dev:csr-hmr": "ng serve --port 5600 --hmr",
    "build": "ng build --prod",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:CI": "ng test --no-watch --code-coverage",
    "dev:ssr": "ng run VersoMart:serve-ssr --port 5600",
    "build:ssr": "ng build && ng run VersoMart:server:production",
    "host-build": "npm run build:ssr",
    "prerender": "ng run VersoMart:prerender",
    "lint": "ng lint",
    "format:check": "npx prettier --config .prettierrc --check \"src/**/*.{ts,css,html}\"",
    "format:all": "npx prettier \"src/**/*.{ts,html,css,scss}\" --write",
    "stylelint:check": "npx stylelint 'src/**/*.{css,scss}'",
    "stylelint:fix": "npx stylelint 'src/**/*.{css,scss}' --fix",
    "check:all": "npm run lint && npm run stylelint:check && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,html,css,scss}": [
      "prettier --config .prettierrc --write"
    ],
    "src/**/*.{js,ts,html}": [
      "eslint 'src/**/*.{js,ts,html}'"
    ],
    "src/**/*.{css,scss}": [
      "stylelint 'src/**/*.{css,scss}'"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/cdk": "^16.1.3",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/material": "^16.1.3",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular/platform-server": "^16.1.0",
    "@angular/router": "^16.1.0",
    "@gilsdav/ngx-translate-router": "^6.1.0",
    "@gilsdav/ngx-translate-router-http-loader": "^2.0.0",
    "@netlify/plugin-angular-universal": "^1.0.1",
    "@nguniversal/express-engine": "^16.1.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "angular-in-memory-web-api": "^0.16.0",
    "deepmerge": "^4.3.1",
    "express": "^4.15.2",
    "ngx-cookie-service-ssr": "^16.0.1",
    "normalize.css": "^8.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.1",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "~16.1.1",
    "@angular/compiler-cli": "^16.1.0",
    "@nguniversal/builders": "^16.1.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "~5.1.3"
  }
}
